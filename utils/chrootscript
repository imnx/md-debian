#!/bin/bash

export HOSTNAME="opi-debian"

echo "

mmmmm      d
m m m  ddddd
m m m  d   d
m m m  ddddd
"

dpkg --configure -a
hostname $HOSTNAME
echo $HOSTNAME > /etc/hostname

passwd

if [[ $1 = "xfce" ]]; then
  apt-get -yy install xfce4 xdm xfce4-goodies
fi

apt-get -yy install locales wpasupplicant iw ssh
sed -i '/en_US.UTF-8/s/^#//' /etc/locale.gen
locale-gen en_US.UTF-8

echo "
modprobe hdmi

exit 0
" > /etc/rc.local
